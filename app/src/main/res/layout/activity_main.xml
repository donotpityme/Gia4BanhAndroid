<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_below="@id/spinner1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>

    <TextView
        android:id="@+id/giadamphan"
        android:layout_below="@id/spinner3"
        android:layout_marginLeft="30dp"
        android:textSize="16dp"
        android:text="Giá đàm phám:"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/giadamphan1"
        android:layout_below="@id/spinner3"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/phitruocba"
        android:layout_below="@id/giadamphan"
        android:layout_marginLeft="30dp"
        android:textSize="16dp"
        android:text="Phí trước bạ:"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/phitruocba1"
        android:layout_below="@id/giadamphan"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/phisddb"
        android:layout_below="@id/phitruocba"
        android:layout_marginLeft="30dp"
        android:textSize="16dp"
        android:text="Phí sử dụng đường bộ (1 năm):"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/phisddb1"
        android:layout_below="@id/phitruocba"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/baohiem"
        android:layout_below="@id/phisddb"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:text="Bảo hiểm trách nhiệm dân sự:"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/baohiem1"
        android:layout_below="@id/phisddb"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/bienso"
        android:layout_below="@id/baohiem"
        android:text="Phí đăng ký biển số:"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/bienso1"
        android:layout_below="@id/baohiem"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dangkiem"
        android:layout_below="@id/bienso"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:text="Phí đăng kiểm:"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dangkiem1"
        android:layout_below="@id/bienso"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tong"
        android:layout_below="@id/dangkiem"
        android:layout_marginLeft="30dp"
        android:text="Tổng cộng:"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tong1"
        android:layout_below="@id/dangkiem"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>